rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Center images: only the center owner can upload, anyone can read
    match /centers/{centerId}/{type}/{fileName} {
      // Anyone can read center images (for public club pages)
      allow read: if true;
      
      // Only authenticated center owner can write
      allow write: if request.auth != null && request.auth.uid == centerId;
    }
  }
}
