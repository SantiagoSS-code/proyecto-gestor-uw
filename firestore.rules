rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isPlatformAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'platform_admin';
    } 

    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/write their own user doc
    match /users/{userId} {
      allow read: if (isSignedIn() && request.auth.uid == userId) || isPlatformAdmin();
      allow write: if (isSignedIn() && request.auth.uid == userId) || isPlatformAdmin();
    }

    // Center admins can write their own center data
    match /padel_centers/{centerId} {
      // Public center profile is readable for landing pages
      allow read: if true;
      allow write: if (request.auth != null && request.auth.uid == centerId) || isPlatformAdmin();

      // Courts subcollection
      match /courts/{courtId} {
        allow read: if resource.data.published == true || (request.auth != null && request.auth.uid == centerId) || isPlatformAdmin();
        allow write: if (request.auth != null && request.auth.uid == centerId) || isPlatformAdmin();
      }

      // Availability configuration (admin only)
      match /availability/{docId} {
        allow read, write: if (request.auth != null && request.auth.uid == centerId) || isPlatformAdmin();
      }

      // Booking requests created by players (public write)
      match /booking_requests/{requestId} {
        allow create: if true;
        allow read, update, delete: if (request.auth != null && request.auth.uid == centerId) || isPlatformAdmin();
      }

      // Bookings (server/admin only)
      match /bookings/{bookingId} {
        allow read, write: if (request.auth != null && request.auth.uid == centerId) || isPlatformAdmin();
      }
    }

    // New public Clubs model
    match /centers/{centerId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == centerId;
      }

      allow read: if resource.data.published == true || isOwner() || isPlatformAdmin();
      allow create, update, delete: if isOwner() || isPlatformAdmin();

      match /courts/{courtId} {
        function parentPublished() {
          return get(/databases/$(database)/documents/centers/$(centerId)).data.published == true;
        }

        allow read: if (resource.data.published == true && parentPublished()) || isOwner() || isPlatformAdmin();
        allow create, update, delete: if isOwner() || isPlatformAdmin();
      }

      match /settings/{docId} {
        // Public needs read access to booking settings when the club is published
        allow read: if (docId == "booking" && get(/databases/$(database)/documents/centers/$(centerId)).data.published == true) || isOwner() || isPlatformAdmin();
        allow write: if isOwner() || isPlatformAdmin();
      }

      match /classes/{classId} {
        function parentPublished() {
          return get(/databases/$(database)/documents/centers/$(centerId)).data.published == true;
        }

        allow read: if parentPublished() || isOwner() || isPlatformAdmin();
        allow create, update, delete: if isOwner() || isPlatformAdmin();
      }

      match /bookings/{bookingId} {
        allow read, write: if isOwner() || isPlatformAdmin();
      }
    }

    // Players collection - users can read/write their own player profile
    match /players/{playerId} {
      allow read: if isSignedIn() && request.auth.uid == playerId;
      allow create: if isSignedIn() && request.auth.uid == playerId;
      allow update: if isSignedIn() && request.auth.uid == playerId;
      allow delete: if isPlatformAdmin();
    }
  }
}